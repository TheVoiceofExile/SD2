<Window x:Class="ServerApplication.MainControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServerApplication"
        mc:Ignorable="d"
        Title="MainControlWindow" Height="900" Width="1600">
    <Grid>
        <TextBlock x:Name="MainControlWindowTitle" HorizontalAlignment="Left" Margin="1280,10,0,0" TextWrapping="Wrap" Text="MAIN CONTROL WINDOW" VerticalAlignment="Top" Height="40" Width="302" FontSize="24" TextAlignment="Center"/>
        <TextBlock x:Name="LoggedInAsLabel" HorizontalAlignment="Left" Margin="1280,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="41" Width="302" FontSize="20"/>
        <Button x:Name="LogoutButton" Content="Logout" HorizontalAlignment="Left" Margin="1405,150,0,0" VerticalAlignment="Top" Width="75" FontSize="16" Click="Logout"/>
    </Grid>
</Window>
